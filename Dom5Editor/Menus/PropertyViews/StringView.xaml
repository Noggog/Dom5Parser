<UserControl x:Class="Dom5Editor.Menus.StringView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Dom5Editor.Menus"
             mc:Ignorable="d" >
    <Grid MaxWidth="1600">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="0" Margin="2" Height="24" TextAlignment="Right" 
                   Text="{Binding Path=Label}" Style="{StaticResource SubHeaderTextBlockStyle}"/>
        <TextBox Grid.Column="1" Height="24" Margin="2" Text="{Binding Path=Value}" 
                 TextAlignment="Left" Style="{StaticResource ModernTextBoxStyle}"/>
    </Grid>
</UserControl>