<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dom5Editor"
        xmlns:Mods="clr-namespace:Dom5Edit;assembly=Dom5Edit"
         x:Class="Dom5Editor.MainWindow"
        mc:Ignorable="d"
        Title="Dominions 5 Mod Tools" MinHeight="480" MinWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TabControl x:Name="ModTools" Grid.Column="0">
            <TabItem x:Name="ModMerger" Header="Merge Tool">
                <local:MergerMenuTab/>
            </TabItem>
            <TabItem x:Name="ModEditor" Header="Mod Editor" IsEnabled="True">
                <local:ModView />
            </TabItem>
        </TabControl>
    </Grid>
</Window>
